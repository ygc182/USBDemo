<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.qinshou.usbdemo.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUSBState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"/>

            <TextView
                android:id="@+id/tvUSBState2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"/>

            <TextView
                android:id="@+id/tvUSBState3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"/>

            <Button
                android:id="@+id/btnSendData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送数据"/>

            <Button
                android:id="@+id/btnStopSendData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止发送"/>
            <TextView
                android:id="@+id/result"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnReceiveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收数据"/>
            <Button
                android:id="@+id/btnStopReceiveData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止接收"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
